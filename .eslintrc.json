{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "prettier",
        "prettier/react"
    ],
    "rules": {
        "react/prop-types": 0,
        "react-hooks/rules-of-hooks": "error",
        "no-console": "warn",
        "css-modules/no-unused-class": ["warn", { "camelCase": true }],
        "css-modules/no-undef-class": ["warn", { "camelCase": true }]
    },
    "parser": "babel-eslint",
    "plugins": ["react", "import", "jsx-a11y", "react-hooks", "css-modules"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
